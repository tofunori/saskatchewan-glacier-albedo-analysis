[flake8]
max-line-length = 88
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    legacy,
    build,
    dist,
    .eggs,
    *.egg-info
ignore = 
    E203,
    E501,
    W503,
    E722
per-file-ignores =
    __init__.py:F401
    tests/*:E501,F401,F811,E402
select = E,W,F,C
statistics = True
count = True